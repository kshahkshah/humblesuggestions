.grid-100
  %h2 Sign In

  %p.deep
    Welcome back. Please continue to <a href="mailto:me@kunalashah.com">give me feedback</a>.
  = link_to "Did you forget your password?", new_password_path(resource_name)

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %fieldset
      = f.label :email
      %br
      = f.email_field :email
    %fieldset
      = f.label :password
      %br
      = f.password_field :password
    %fieldset
      = f.check_box :remember_me
      = f.label :remember_me
    %fieldset
      = f.submit "Sign in"
