source 'http://rubygems.org'

# core
gem 'rails', '3.2.11'

# backend
gem 'pg'
gem 'redis'
gem 'resque'

# front end
gem 'jquery-rails'
gem 'haml'

# statistics
gem 'statsample'
gem 'gsl', :git => 'git://github.com/whistlerbrk/rb-gsl.git'

# development
gem 'annotate'
gem 'debugger'
gem 'pry'
gem 'mailcatcher'

# authentication
